<%- include('../partials/style') %>
<%- include('../partials/nav') %>



    <body>
        <div id="container" class="">
            <div>
                <h1 class="text-center">New Flight</h1>
            </div>
            <form action="/flights" method="post">
                <div class="d-grid gap-5">
                    <div class="container ">

                        <label class="margin-right-5" for="airLine">Select Airline</label><br>
                        <select required name="airline" id="">
                            <option selected disabled value="">Choose an airline</option>

                            <% ['American', 'Southwest' , 'United' ].forEach(airline=> {%>
                                <option value="<%= airline %>">
                                    <%= airline %>
                                </option>
                                <% }); %>
                        </select>
                    </div>
                    <div class="container">

                        <label for="airport">Select Airport</label><br>
                        <select name="airport" id="">
                            <option selected disabled value="">Choose an airport</option>
                            <% ['AUS', 'DFW' , 'DEN' , 'LAX' , 'SAN' ].forEach((airport)=>{%>
                                <option value="<%= airport %>">
                                    <%= airport %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="container">
                        <label for="flightNo">Flight Number</label><br>
                        <input required type="number" name="flightNo" min="10" max="9999">
                    </div>
                    <div class="container">
                        <label for="departs">Departs</label><br>
                        <input type="datetime-local" name="departs" id="">
                    </div>
                </div>
                <div class="mt-4">
                    <button class="btn btn-outline-primary" type="submit">Add Flight</button>
                </div>
            </form>
        </div>
    </body>
