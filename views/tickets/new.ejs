<%- include('../partials/style') %>
<%- include('../partials/nav') %>
<div class="container mt-5 mb-5 d-flex justify-content-center">

  <div class="card px-1 py-4">
    <div class="card-body">
      <form action=<%= `/flights/${flight._id}/tickets` %> method="post">
        <h3 class="card-title mb-3">This ticket is for flight# <%= flight.flightNo %> </h3>
        <div class="row">
          <div class="col-sm-12">
            <div class="">
              <label for="seat">Enter Seat Number</label>
              <div class="input-group"><input class="form-control mb-2" name="seat" required pattern="[A-F][1-9]\d?" placeholder="Must be 'A1' thru 'F99'">
              </div>
              <div class="input-group"> <input class="form-control" type="number" min="0" name="price" placeholder="Price"> </div>
            </div>
          </div>
        </div>
        <div class=" d-flex flex-column text-center px-5 mt-3 mb-3"> <small class="agree-text">Please provide the required information.</small></div>
        <div class="d-flex justify-content-between">
          <button type="submit" class="btn btn-primary btn-block confirm-button">Create</button>
        </div>
      </form>
      <div>
        <a class="btn btn-danger" href=<%= `/flights/${flight._id}` %>>
          Cancel
        </a>
      </div>
    </div>
  </div>
</div>
